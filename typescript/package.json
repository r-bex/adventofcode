{
  "name": "aoc-ts",
  "version": "1.0.0",
  "description": "Typescript solutions to Advent of Code challenges (2023)",
  "main": "index.js",
  "scripts": {
    "challenge": "npx tsc && node 2023/day$DAY/main.js",
    "new": "mkdir 2023/day$DAY && touch 2023/day$DAY/input.txt && touch 2023/day$DAY/example1.txt && touch 2023/day$DAY/example2.txt && cp 2023/common/template.ts 2023/day$DAY/main.ts",
    "lint": "eslint --ext .ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
